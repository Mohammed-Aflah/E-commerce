<div class="container">
    <div class="row mt-5">
        {{#each products}}
        <div class="col-md-3 cards">
            <div class="card" style="width: 13rem;height: 390px;margin-top: 10px;">
                <img src="images/Shopping-Images/{{this._id}}.jpg" class="card-img-top" alt=""
                    style="height: 180px;width: 12rem;margin:5px">
                <div class="card-body">
                    <h6 class="card-title" style="font-weight: bold;">{{this.Name}}</h6>
                    <p class="card-text">{{this.Description}}</p>
                    <p>{{this.Price}}â‚¹</p>
                    <a href="/Add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

