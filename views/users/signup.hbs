<div class="container">
    <div class="row text-center" style="display: flex;justify-content: center;">
        <h1 class="text-center">Create New Account</h1>
    </div>
    <form class="bg-secondary p-5 mt-3 w-50" action="/signup" style="border-radius: 10px;margin:auto" method="post"
        autocomplete="off">
        <div class="form-group">
            <label class="text-white">Name</label>
            <input type="text" class="form-control" name="Name" placeholder="John">
        </div>
        <div class="form-group">
            <label class="text-white">Email</label>
            <input type="email" class="form-control" name="Email" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label class="text-white">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Enter Password">
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
            <div class="col-md-6" style="text-align: right;">
                <a href="/login" class="ml-auto">Login here</a>
            </div>
        </div>


    </form>
</div>