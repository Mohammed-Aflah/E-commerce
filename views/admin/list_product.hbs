<div class="container">

    <div class="row">
        <a href="/admin/Add-product" class="btn btn-success ml-auto m-4">Add Product</a>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.Name}}</td>
                <td>{{this.Price}}</td>
                <td>{{this.Category}}</td>
                <td>{{this.Description}}</td>
                <td>
                    <img src="images/Shopping-Images/{{this._id}}.jpg" width="50px" height="52px" alt="product-Images">
                </td>
                <td>
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary mt-2"
                        style="font-size: 12px;margin: auto;"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger mt-2"
                        style="font-size: 12px;margin: auto;"
                        onclick="return confirm('Are you sure want to delete {{this.Name}}')"><i class="fa fa-trash"
                            onclick="return confirm('Are you sure want to delete {{this.Name}}')"
                            aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>